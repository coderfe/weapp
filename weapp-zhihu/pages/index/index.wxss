/**index.wxss**/
page {
  background-color: #f5f5f5;
}
.banner-img {
  width: 100%;
  height: 100%;
}
.banner-text {
  display: block;
  height: 2.5rem;
  padding: .5rem;
  position: absolute;
  bottom: 0;
  line-height: 1.4;
  color: #fff;
  font-size: 1rem;
  background: linear-gradient(to top, rgba(0, 0, 0, .8), rgba(0, 0, 0, 0));
  z-index: 999;
}
.content-container {
  width: 95%;
  margin: 0 auto;
}

.list {
  /*width: 95%;
  /*margin-bottom: 1rem;*/
  margin: .5rem 0;
  display: flex;
  border-radius: 3px;
  padding: .5rem;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .26);
  background-color: #fff;
  font-size: .8rem;
}
.list .content-title {
  width: 75%;
  line-height: 1.5;
}
.list .content-img {
  width: 5rem;
  height: 5rem;
}
